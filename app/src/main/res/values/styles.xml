<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_activity_background</item>

        <item name="materialButtonStyle">@style/ControlButtons</item>
        <item name="alertDialogTheme">@style/Dialog</item>

        <!-- Number picker divider lines -->
        <item name="colorControlNormal">@color/color_accent</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
    </style>

    <style name="ActivityTransitions" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/idle</item>
        <item name="android:activityCloseEnterAnimation">@anim/idle</item>
        <item name="android:activityCloseExitAnimation">@anim/left_to_right</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/color_activity_background</item>
        <item name="buttonBarButtonStyle">@style/DialogButtons</item>
    </style>

    <style name="DialogButtons" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/font_medium_18</item>
    </style>

    <style name="NumberPicker" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_huge_32</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="TextAppearance.Text" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_medium_18</item>
    </style>

    <style name="TextAppearance.SmallText" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_small_16</item>
    </style>

    <style name="ControlButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
