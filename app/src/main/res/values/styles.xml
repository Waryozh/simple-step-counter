<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_activity_background</item>

        <!-- Overflow menu background color -->
        <item name="android:itemBackground">@color/color_activity_background</item>

        <!-- Overflow menu items text -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="AppTheme">
        <item name="android:textSize">@dimen/font_large_20</item>

        <!-- Number picker elements text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Number picker divider lines -->
        <item name="android:colorControlNormal">@color/color_accent</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_huge_32</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="ControlButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
